<Window x:Class="StudentSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentSystem"
        xmlns:viewModel="clr-namespace:StudentSystem.MVVM.ViewModel"
        xmlns:controls="clr-namespace:StudentSystem.Controls"
        xmlns:view="clr-namespace:StudentSystem.MVVM.View"
        mc:Ignorable="d"
        Height="600" Width="900"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        MouseDown="MainWindow_OnMouseDown"
        AllowsTransparency="True">

    <Window.DataContext>
        <viewModel:LoginViewModel/>
    </Window.DataContext>

    <Border Background="#FF85DCBA"
            CornerRadius="20">
        <ContentControl Content="{Binding CurrentViewModelParent}"/>
    </Border>
</Window>
